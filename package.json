{
  "name": "dirigera",
  "version": "1.2.0",
  "description": "A TypeScript client for IKEA's DIRIGERA smart home hub",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "dist/src/bin.js",
  "scripts": {
