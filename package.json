  "author": "lpgera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lpgera/dirigera/issues"
  },
  "homepage": "https://github.com/lpgera/dirigera#readme",
  "dependencies": {
    "commander": "^12.1.0",
    "got": "^14.4.5",
    "mdns-server": "^1.0.11",
    "p-retry": "^6.2.1",
    "reconnecting-websocket": "^4.4.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.1",
    "@types/ws": "^8.5.13",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
